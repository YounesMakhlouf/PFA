actor Child
boundary GameScreen
control GameViewModel
database GameRepository
database SessionRepository
entity AudioService
entity TtsService
 == Answer Handling ==
        loop until correct answer
            Child -> GameScreen: selectOption(option)
            GameScreen -> GameViewModel: checkAnswer(option)
            GameViewModel -> GameViewModel: validate answer
            alt correct
                GameViewModel -> SessionRepository: addAttemptToSession()
                GameViewModel -> AudioService: playSound(correct)
                GameViewModel -> TtsService: speak(correctFeedback)
                GameViewModel -> GameViewModel: moveToNextScreen()
            else
                GameViewModel -> SessionRepository: addAttemptToSession()
                GameViewModel -> AudioService: playSound(incorrect)
                GameViewModel -> TtsService: speak(tryAgainFeedback)
            end
        end